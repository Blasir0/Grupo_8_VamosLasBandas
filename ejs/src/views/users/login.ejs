<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/login.css">

<body>

    <%- include('../partials/header.ejs') %>

    <main class="login-form">
        <h1 class="title">Iniciar Sesion</h1>
        <form action="/users/login" id="form" method="POST">
            <div class="form-obj">
                <label for="email">Email</label>
                <input type="text" name="email" id="email" placeholder="Email de usuario" required>
                <small class="text-danger" id="emailError"></small>
                <% if(locals.errors && errors.email) { %>
                    <div style="color:red">
                        <%= errors.email.msg %>
                    </div>
                <% } %>
            </div>
            <div class="form-obj">
                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password" placeholder="Contraseña" required>
                <small class="text-danger" id="passwordError"></small>
            </div>
            <div class="buttons">
                <input type="submit" id="button" value="Ingresar">
            </div>
            <div class="remember">
                <input type="checkbox" id="rememberUser" name="rememberUser" checked>
                <label for="rememberUser">Recordar usuario</label>
            </div>
        </form>
            
        <section>
        <!-- boton login -->
        <div>
            <a href="/users/register"><p class="help">Registrarse</p></a>
        </div>
        </section>
    </main>

    <%- include('../partials/footer.ejs') %>
    <script src="/js/login.js"></script>
</body>
</html>