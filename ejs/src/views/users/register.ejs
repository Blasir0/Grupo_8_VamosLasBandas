<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/register.css">

<body>

    <%- include('../partials/header.ejs') %>

    <main class="title">
        <h1>Registrarse</h1>
        <form class="form-group" action="/users/register" id="form" enctype="multipart/form-data" method="POST">
            <div class="form-obj">
                <label for="email">Email</label>
                <input type="text" name="email" id="email" placeholder="juanperez@vamoslasbandas.com">
                <small class="text-danger" id="emailError"></small>
            </div>
            <div class="form-obj">
                <label for="firstName">Nombre</label>
                <input type="text" name="firstName" id="firstName" placeholder="Juan" required >
                <small class="text-danger" id="firstNameError"></small>
            </div>
            <div class="form-obj">
                <label for="lastName">Apellido</label>
                <input type="text" name="lastName" id="lastName" placeholder="Perez" required>
                <small class="text-danger" id="lastNameError"></small>
            </div>
            <div class="form-obj">
                <label for="category">Categoria</label>
                <select name="category" id="category">
                    <option>Categoria</option>
                    <option value="Comprador">Comprador</option>
                    <option value="Vendedor">Vendedor</option>
                </select>
                <small class="text-danger" id="categoryError"></small>
            </div>
            <div class="form-obj">
                <label for="password">Contrase√±a</label>
                <input type="password" name="password" id="password" placeholder="Perez1234" required>
                <small class="text-danger" id="passwordError"></small>
            </div>
            <div class="form-group-photo">
                <input type="file" name="image" id="image" accept="image/*">
            </div>
            
            <div class="form-obj">
                <button type="submit" id="button" class="buttons"> Registrarse </button>
            </div>
        </form>

        <section class="help">
        <a href="/login">
            <p>Ya tenes una cuenta?</p>
            <p>Iniciar Sesion</p></a>
        </section>
    </main>

    <%- include('../partials/footer.ejs') %>
    <script src="/js/register.js"></script>
</body>
</html>