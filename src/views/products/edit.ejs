<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/create.css">

<body>

    <%- include('../partials/header.ejs') %>

        <main>
            <form action="/products/edit/<%= product.idProduct%>?_method=PUT" method="POST" class="register" enctype="multipart/form-data">
                <h3>Editar producto</h3>
                <div class="form-group">
                    <label for="name">Nombre del producto</label>
                    <input type="text" name="name" id="name" value="<%= product.name%>" minlength="7" required >
                </div>
                <div class="form-group">
                    <label for="price">Precio del producto</label>
                    <input type="text" name="price" id="price" value="<%= product.price%>" minlength="3" required >
                </div>
                <div class="form-group">
                    <label for="description">Descripcion del producto</label>
                    <textarea class="productDetail" name="description" id="description" value="<%= product.description%>" cols="30" rows="10"></textarea>
                </div>      
                <div class="form-obj">
                    <select name="idColors" id="idColors" >
                        <option value="" disabled selected>Seleccione el color</option>
                        <% allColor.forEach(color => { %>
                        <option value="<%= color.idColors %>"><%= color.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-obj">
                    <label for="category" class="form-label">Categoría:</label>
                    <select name="category" id="category" class="form-input">
                        <option value=""><%= product.category == 'in-sale'?'En oferta':'ultimos agregados'%></option>
                        <option value="in-sale">En oferta</option>
                        <option value="visited" >Últimos agregados</option>
                    </select>
                </div>
                <div class="form-group-photo">
                    <input type="file" name="image" id="image" accept="image/*" >
                </div>
                <button type="submit" class="primary"> Enviar </button>
            </form>
        </main>

    <%- include('../partials/footer.ejs') %>

</body>
</html>