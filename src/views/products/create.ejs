<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/create.css">

<body>

    <%- include('../partials/header.ejs') %>

        <main>
            <form action="/products/create" method="POST" class="register" id="form" enctype="multipart/form-data">
                <h3>Agregar Producto</h3>
                <div class="form-group">
                    <label for="name">Nombre del producto</label>
                    <input type="text" name="name" id="name" placeholder="Nombre del Producto" >
                    <small class="text-danger" id="nameError"></small>
                </div>
                <div class="form-group">
                    <label for="price">Precio del producto</label>
                    <input type="text" name="price" id="price" placeholder="Precio del Producto"  >
                    <small class="text-danger" id="priceError"></small>
                </div>
                <div class="form-group">
                    <label for="description">Descripcion del producto</label>
                    <textarea class="productDetail" name="description" id="description" placeholder="Descripcion" cols="30" rows="10"></textarea>
                    <small class="text-danger" id="descriptionError"></small>
                </div>      
                <div class="form-obj">
                    <select name="idColors" id="idColors" >
                        <option value="" disabled selected>Seleccione el color</option>
                        <% allColor.forEach(color => { %>
                        <option value="<%= color.idColors %>"><%= color.name %></option>
                        <% }); %>
                    </select>
                    <small class="text-danger" id="colorError"></small>
                </div>
                </div>
                <div class="form-obj">
                    <label for="category" class="form-label">Categoría:</label>
                    <select name="category" id="category" class="form-input">
                        <option value="in-sale">En oferta</option>
                        <option value="visited" >Últimos agregados</option>
                    </select>
                    <small class="text-danger" id="categoryError"></small>
                </div>
                <div class="form-group-photo">
                    <input type="file" name="image" id="image"  accept="image/*">
                </div>
                <button type="submit" class="primary" id="button"> Crear </button>
            </form>
        </main>

    <%- include('../partials/footer.ejs') %>
    <script src="/js/create.js"></script>
</body>
</html>