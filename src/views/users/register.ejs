<body>

    <%- include('../partials/header.ejs') %>

    <main class="title">
        <h1>Registrarse</h1>
        <form class="form-group" action="/users/register" enctype="multipart/form-data" method="POST">
            <div class="form-obj">
                <label for="email">Email</label>
                <input type="text" name="email" placeholder="juanperez@vamoslasbandas.com">
            </div>
            <div class="form-obj">
                <label for="firstName">Nombre</label>
                <input type="text" name="firstName" placeholder="Juan" required >
            </div>
            <div class="form-obj">
                <label for="lastName">Apellido</label>
                <input type="text" name="lastName" placeholder="Perez" required>
            </div>
