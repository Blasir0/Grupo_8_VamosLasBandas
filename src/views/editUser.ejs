<!DOCTYPE html>
<html lang="en">

    <%- include('partials/head.ejs') %>
    <link rel="stylesheet" href="/css/register.css">

<body>

    <%- include('partials/header.ejs') %>

    <main class="title">
        <h1>Editar usuario</h1>
        <form class="form-group" form action="/products/editUser/<%= user.id%>?_method=PUT" method="POST">
            <div class="form-obj">
                <label for="email">Email</label>
                <input type="text" name="email" value="<%= user.email%>">
            </div>
            <div class="form-obj">
                <label for="name">Nombre</label>
                <input type="text" name="name" value="<%= user.firstName%>" required >
            </div>
            <div class="form-obj">
                <label for="last_name">Apellido</label>
                <input type="text" name="last_name" value="<%= user.lastName%>" required>
            </div>
            <div class="form-obj">
                <label for="instrument">Instrumento</label>
                <select name="instrument" >
                    <option value=""><%= user.instrument%></option>
                    <option value="">Bajo</option>
                    <option value="">Bateria</option>
                    <option value="">Guitarra</option>
                    <option value="">Teclado</option>
                    <option value="">Voz</option>
                </select>
            </div>
            <div class="form-obj">
                <label for="category">Categoria</label>
                <select name="category">
                    <option value=""><%= user.category%></option>
                    <option value="">Comprador</option>
                    <option value="">Vendedor</option>
                </select>
            </div>
            
            <div class="form-obj">
                <button type="submit" class="buttons"> Guardar </button>
            </div>
        </form>
    </main>

    <%- include('partials/footer.ejs') %>

</body>
</html>